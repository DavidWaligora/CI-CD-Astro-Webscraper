---
import Games from '../data/games.json'
const gameList = Games;
---
<!--voorbeeld gamelist item-->
<ul class="divide-y divide-gray-200 dark:divide-gray-700">
  {
    gameList.map(item => (
            <li class="py-3 sm:py-4 game-item">
                <div class="flex items
                -center space-x-4 rtl:space-x-reverse">
                    <div class="flex-1 min
                    -w-0">
                        <p class="text-sm font-medium text-gray-900 truncate dark:text-white"> {item.title.replace(/™/g, '').replace(/®/g, '').replace(/ö/g, '')} </p>
                    </div>
                    <div class="inline-flex items-center text-base font-semibold text-gray-900 dark:text-white">
                <span class="text-green-500 discount-percentage"> {(item.isDiscounted)? item.discountPercentage + '%': 0 + '%'}
                </span>
                    </div>
                </div>
            </li>
    ))
  }
</ul>
